{% extends 'base.html.twig' %}

{% block title %}Todo Manager!{% endblock %}

{% block body %}

<div >
    {% for todo in todos %}
            <div class="todoTitle">{{todo.title}}</div>        
            <div class="todoContent">{{todo.content}}</div>
            <div class="todoDone">Réalisée : {{todo.isDone}}</div>
            <div class="todoDoneAt">Date réalisation :{{todo.doneAt|date('Y-m-d H:i:s')}}</div>
            <div class="todocreateddAt">Date de création :{{todo.createdAt|date('Y-m-d H:i:s')}}</div>
            <a href="{{ path("todo_show", {id: todo.id}) }}">Voir détail</a> 
            <a href="{{ path('todo_modify', {id: todo.id}) }}">Modifier la tâche</a>  
            <a href="{{ path('todo_delete', {id: todo.id}) }}">Supprimer la tâche</a>
    {% endfor %}   
</div>
 
{% endblock %}


