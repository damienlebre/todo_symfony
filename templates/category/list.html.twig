{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
  <h1>Liste des categories</h1>
  <a href="{{ path('new_category') }}">Ajouter une catégorie</a>
    <div>
        {% for category in categories %}
            <div >
                <div>Catégories :</div>
                <div>
                    <h4>{{ category.name }}</h4>
                    <a href="{{ path('category_show', {id: category.id}) }}">Voir la catégorie</a>
                    <a  href="{{ path('category_edit', {id: category.id}) }}">Modifier</a>
                    <a  href="{{ path('category_delete', {id: category.id}) }}">Supprimer</a> 
                </div>
            </div>
        {% endfor %}  
    </div>      
{% endblock %}
